{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "cargo": {
        "rangeStrategy": "bump"
    },
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "rust",
            "managerFilePatterns": [
                "/(^|/)rust-toolchain\\.toml?$/"
            ],
            "matchStrings": [
                "channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""
            ],
            "packageNameTemplate": "rust-lang/rust"
        },
        {
            "customType": "regex",
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "rust-dtolnay",
            "managerFilePatterns": [
                ".github/workflows/.+\\.ya?ml$"
            ],
            "matchStrings": [
                "dtolnay/rust-toolchain@(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"
            ],
            "packageNameTemplate": "rust-lang/rust"
        }
    ],
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "commitMessageTopic": "Rust",
            "matchDepNames": [
                "rust",
                "rust-dtolnay"
            ],
            "matchManagers": [
                "custom.regex"
            ]
        }
    ],
    "prHourlyLimit": 10
}