{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "cargo": {
        "rangeStrategy": "bump"
    },
    "customDatasources": {
        "rust-nightly": {
            "defaultRegistryUrlTemplate": "https://rust-lang.github.io/rustup-components-history/x86_64-unknown-linux-gnu/rustfmt",
            "format": "plain",
            "transformTemplates": [
                "{\"releases\": [{\"version\": $trim($)}]}"
            ]
        }
    },
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "rust",
            "managerFilePatterns": [
                "/(^|/)rust-toolchain\\.toml$/"
            ],
            "matchStrings": [
                "channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""
            ],
            "packageNameTemplate": "rust-lang/rust"
        },
        {
            "customType": "regex",
            "datasourceTemplate": "github-tags",
            "depNameTemplate": "cargo-bins/cargo-binstall",
            "managerFilePatterns": [
                "**/Dockerfile"
            ],
            "matchStrings": [
                "https://raw.githubusercontent.com/cargo-bins/cargo-binstall/v(?<currentValue>.*?)/install-from-binstall-release.sh"
            ],
            "packageNameTemplate": "cargo-bins/cargo-binstall"
        },
        {
            "customType": "regex",
            "datasourceTemplate": "custom.rust-nightly",
            "depNameTemplate": "rust-nightly",
            "managerFilePatterns": [
                "**/Dockerfile"
            ],
            "matchStrings": [
                "nightly-(?<currentValue>\\d{4}-\\d{2}-\\d{2})"
            ]
        },
        {
            "customType": "jsonata",
            "fileFormat": "json",
            "datasourceTemplate": "github-releases",
            "managerFilePatterns": [
                "**/binstall-versions.json"
            ],
            "matchStrings": [
                "$[*].{\"depName\": repo, \"currentValue\": version}"
            ]
        }
    ],
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "commitMessageTopic": "Rust",
            "matchDepNames": [
                "rust"
            ],
            "matchManagers": [
                "custom.regex"
            ]
        },
        {
            "commitMessageTopic": "Rust nightly",
            "matchDepNames": [
                "rust-nightly"
            ],
            "schedule": [
                "on sunday"
            ]
        },
        {
            "commitMessageTopic": "cargo-binstall",
            "matchDatasources": [
                "github-releases"
            ],
            "matchPackageNames": [
                "cargo-bins/cargo-binstall"
            ]
        }
    ],
    "prHourlyLimit": 10
}